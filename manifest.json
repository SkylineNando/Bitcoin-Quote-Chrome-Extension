{
  "manifest_version": 3,
  "name": "Bitcoin Quote",
  "version": "1.0",
  "description": "Exibe a cotação atual do Bitcoin em tempo real.",
  "permissions": ["https://api.coingecko.com/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
